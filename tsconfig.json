{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "declaration": true,
    "newLine": "LF"
  },
  "rootDir": "./src",
  "allowJs": true,
  "isolatedModules": true,
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ],
}
